import { useState, useRef, useEffect } from 'react';
import { Document, Page, pdfjs } from 'react-pdf';
import { AlertCircle, RefreshCw, ZoomIn, ZoomOut } from 'lucide-react';
import { Button } from '@/components/ui/button';
import 'react-pdf/dist/Page/AnnotationLayer.css';
import 'react-pdf/dist/Page/TextLayer.css';

// Configure PDF.js worker
pdfjs.GlobalWorkerOptions.workerSrc = `//unpkg.com/pdfjs-dist@${pdfjs.version}/build/pdf.worker.min.mjs`;

// Detectar Safari Mobile
const isSafariMobile = () => {
  const ua = navigator.userAgent;
  return /iPhone|iPad|iPod/.test(ua) && /Safari/.test(ua) && !/CriOS|FxiOS|OPiOS/.test(ua);
};

interface EmbedPdfViewerProps {
  url: string;
  allowDownload?: boolean;
  onClose?: () => void;
  customStyles?: {
    closeButtonColor?: string;
    controlsColor?: string;
    headerBgColor?: string;
    controlsBarColor?: string;
  };
}

export const EmbedPdfViewer = ({ url, customStyles }: EmbedPdfViewerProps) => {
  // Detectar Safari Mobile e redirecionar
  const isSafari = isSafariMobile();
  
  useEffect(() => {
    if (isSafari) {
      // Detectar modo standalone (PWA)
      const isStandalone = window.matchMedia('(display-mode: standalone)').matches ||
                          (window.navigator as any).standalone;
      
      if (isStandalone) {
        // Em PWA, usar link direto
        const link = document.createElement('a');
        link.href = url;
        link.target = '_system';
        link.rel = 'noopener noreferrer';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
      } else {
        // Abrir em nova aba
        window.open(url, '_blank', 'noopener,noreferrer');
      }
    }
  }, [isSafari, url]);
  
  // Se for Safari, mostrar mensagem
  if (isSafari) {
    return (
      <div className="flex items-center justify-center h-full p-8 text-center bg-gradient-to-br from-gray-50 to-gray-100">
        <div className="max-w-md">
          <div className="mb-4 text-6xl">üìÑ</div>
          <h3 className="text-xl font-semibold text-gray-800 mb-2">
            PDF Aberto no Safari
          </h3>
          <p className="text-gray-600 mb-6">
            Para melhor visualiza√ß√£o no iOS, o PDF foi aberto no navegador Safari.
          </p>
          <Button 
            onClick={() => {
              const link = document.createElement('a');
              link.href = url;
              link.target = '_system';
              document.body.appendChild(link);
              link.click();
              document.body.removeChild(link);
            }}
            className="bg-blue-600 hover:bg-blue-700"
          >
            Abrir PDF novamente
          </Button>
        </div>
      </div>
    );
  }
  
  const [numPages, setNumPages] = useState<number>(0);
  const [scale, setScale] = useState<number>(1.0);
  const [error, setError] = useState<string | null>(null);
  const [isLoading, setIsLoading] = useState(true);
  const [containerWidth, setContainerWidth] = useState<number>(0);
  const [visiblePages, setVisiblePages] = useState<Set<number>>(new Set([1])); // ‚úÖ OTIMIZA√á√ÉO
  const containerRef = useRef<HTMLDivElement>(null);
  const scrollRef = useRef<HTMLDivElement>(null);

  // Default colors
  const controlsColor = customStyles?.controlsColor || '#ffffff';
  const controlsBarColor = customStyles?.controlsBarColor || '#000000';

  useEffect(() => {
    const updateWidth = () => {
      if (containerRef.current) {
        setContainerWidth(containerRef.current.clientWidth - 32);
      }
    };

    updateWidth();
    window.addEventListener('resize', updateWidth);
    return () => window.removeEventListener('resize', updateWidth);
  }, []);

  // ‚úÖ OTIMIZA√á√ÉO: Renderizar apenas p√°ginas vis√≠veis (virtualiza√ß√£o)
  useEffect(() => {
    const handleScroll = () => {
      if (!scrollRef.current) return;
      
      const scrollTop = scrollRef.current.scrollTop;
      const scrollHeight = scrollRef.current.scrollHeight;
      const clientHeight = scrollRef.current.clientHeight;
      
      // Estimar altura de cada p√°gina (assumindo ~842px padr√£o A4)
      const avgPageHeight = 900;
      const visibleStart = Math.max(1, Math.floor(scrollTop / avgPageHeight));
      const visibleEnd = Math.min(numPages, Math.ceil((scrollTop + clientHeight) / avgPageHeight) + 1);
      
      const newVisiblePages = new Set<number>();
      for (let i = visibleStart; i <= visibleEnd; i++) {
        newVisiblePages.add(i);
      }
      
      setVisiblePages(newVisiblePages);
    };

    const scrollElement = scrollRef.current;
    if (scrollElement) {
      scrollElement.addEventListener('scroll', handleScroll);
      handleScroll(); // Initial call
    }

    return () => {
      if (scrollElement) {
        scrollElement.removeEventListener('scroll', handleScroll);
      }
    };
  }, [numPages]);

  const onDocumentLoadSuccess = ({ numPages }: { numPages: number }) => {
    setNumPages(numPages);
    setIsLoading(false);
  };

  const onDocumentLoadError = () => {
    setError('Erro ao carregar o PDF');
    setIsLoading(false);
  };

  const handleRetry = () => {
    setError(null);
    setIsLoading(true);
  };

  const zoomIn = () => setScale(prev => Math.min(prev + 0.25, 3));
  const zoomOut = () => setScale(prev => Math.max(prev - 0.25, 0.5));

  if (error) {
    return (
      <div className="flex flex-col items-center justify-center h-full bg-black/95 text-white p-8">
        <AlertCircle className="w-16 h-16 text-red-500 mb-4" />
        <h3 className="text-xl font-semibold mb-2">Erro ao Carregar PDF</h3>
        <p className="text-gray-400 text-center mb-6">{error}</p>
        <Button onClick={handleRetry} variant="outline" className="gap-2">
          <RefreshCw className="w-4 h-4" />
          Tentar Novamente
        </Button>
      </div>
    );
  }

  return (
    <div className="w-full h-full relative bg-black flex flex-col">
      {isLoading && (
        <div className="absolute inset-0 flex items-center justify-center bg-black z-10">
          <div className="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-white"></div>
        </div>
      )}

      {/* Minimal floating controls */}
      {!isLoading && numPages > 0 && (
        <div 
          className="absolute bottom-4 left-1/2 -translate-x-1/2 z-20 flex items-center gap-2 backdrop-blur-sm rounded-full px-3 py-1.5 border border-white/10"
          style={{ backgroundColor: `${controlsBarColor}cc` }}
        >
          <Button
            variant="ghost"
            size="icon"
            onClick={zoomOut}
            className="h-7 w-7 hover:bg-white/10"
            style={{ color: controlsColor }}
          >
            <ZoomOut className="w-4 h-4" />
          </Button>
          <span className="text-xs" style={{ color: controlsColor }}>
            {Math.round(scale * 100)}%
          </span>
          <Button
            variant="ghost"
            size="icon"
            onClick={zoomIn}
            className="h-7 w-7 hover:bg-white/10"
            style={{ color: controlsColor }}
          >
            <ZoomIn className="w-4 h-4" />
          </Button>
        </div>
      )}

      {/* PDF Document - Virtualiza√ß√£o para melhor performance */}
      <div ref={scrollRef} className="flex-1 overflow-auto flex justify-center p-4">
        <Document
          file={url}
          onLoadSuccess={onDocumentLoadSuccess}
          onLoadError={onDocumentLoadError}
          loading={null}
          options={{
            cMapUrl: `https://unpkg.com/pdfjs-dist@${pdfjs.version}/cmaps/`,
            cMapPacked: true,
            standardFontDataUrl: `https://unpkg.com/pdfjs-dist@${pdfjs.version}/standard_fonts/`,
          }}
        >
          <div className="flex flex-col gap-4">
            {Array.from(new Array(numPages), (_, index) => {
              const pageNum = index + 1;
              const isVisible = visiblePages.has(pageNum);
              
              return isVisible ? (
                <Page
                  key={`page_${pageNum}`}
                  pageNumber={pageNum}
                  width={containerWidth > 0 ? containerWidth * scale : undefined}
                  renderTextLayer={true}
                  renderAnnotationLayer={true}
                  loading={<div className="h-[842px] bg-gray-200 animate-pulse rounded" />}
                />
              ) : (
                <div key={`placeholder_${pageNum}`} className="h-[842px] bg-gray-100 rounded" />
              );
            })}
          </div>
        </Document>
      </div>
    </div>
  );
};

export default EmbedPdfViewer;
